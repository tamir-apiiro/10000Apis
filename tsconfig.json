{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@handlers/*": ["handlers/*"]
    },
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"]
}
